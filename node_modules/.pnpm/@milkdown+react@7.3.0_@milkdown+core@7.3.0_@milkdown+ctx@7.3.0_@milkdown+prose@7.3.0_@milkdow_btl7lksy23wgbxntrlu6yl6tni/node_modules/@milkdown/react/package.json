{
  "name": "@milkdown/react",
  "type": "module",
  "version": "7.3.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Milkdown/milkdown.git",
    "directory": "packages/react"
  },
  "keywords": [
    "milkdown",
    "milkdown plugin",
    "react"
  ],
  "sideEffects": false,
  "main": "./lib/index.es.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "peerDependencies": {
    "@milkdown/core": "^7.2.0",
    "@milkdown/prose": "^7.2.0",
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "tslib": "^2.5.0",
    "@milkdown/utils": "7.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@milkdown/core": "7.3.0",
    "@milkdown/prose": "7.3.0"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "packages/react/lib"
        ],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      },
      "tsc": {
        "outputs": [],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      }
    }
  },
  "scripts": {
    "start": "concurrently -n es,dts \"vite build --watch\"  \"tsc --emitDeclarationOnly --watch\"",
    "test": "vitest",
    "tsc": "tsc --noEmit && echo",
    "build": "tsc --emitDeclarationOnly && vite build"
  }
}